---
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { Icon } from "astro-icon/components";
---

<MainGridLayout title="Contact" description="Get in touch with Kamrul Hassan for cybersecurity discussions, research collaboration, or professional inquiries">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full">
            <h1 class="professional-heading mb-6">Get In Touch</h1>
            
            <div class="grid md:grid-cols-2 gap-8">
                <!-- Contact Information -->
                <div class="space-y-6">
                    <section class="professional-card p-6">
                        <h2 class="text-xl font-bold mb-4 flex items-center">
                            <Icon name="fa6-solid:address-card" class="mr-3 text-blue-600" />
                            Contact Information
                        </h2>
                        <div class="space-y-4">
                            <div class="flex items-start">
                                <Icon name="fa6-solid:envelope" class="mr-3 mt-1 text-gray-600" />
                                <div>
                                    <h3 class="font-semibold">Email</h3>
                                    <a href="mailto:kamrulhassan7740@gmail.com" 
                                       class="text-blue-600 hover:text-blue-800 transition">
                                        kamrulhassan7740@gmail.com
                                    </a>
                                </div>
                            </div>
                            
                            <div class="flex items-start">
                                <Icon name="fa6-solid:phone" class="mr-3 mt-1 text-gray-600" />
                                <div>
                                    <h3 class="font-semibold">Phone</h3>
                                    <a href="tel:+8801780080002" 
                                       class="text-blue-600 hover:text-blue-800 transition">
                                        +880 1780 080002
                                    </a>
                                </div>
                            </div>
                            
                            <div class="flex items-start">
                                <Icon name="fa6-solid:location-dot" class="mr-3 mt-1 text-gray-600" />
                                <div>
                                    <h3 class="font-semibold">Location</h3>
                                    <p class="text-gray-600 dark:text-gray-300">
                                        Ishandi Sarkar Road, Tongi<br>
                                        Gazipur â€“ 1712, Bangladesh
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Professional Links -->
                    <section class="professional-card p-6">
                        <h2 class="text-xl font-bold mb-4 flex items-center">
                            <Icon name="fa6-solid:link" class="mr-3 text-green-600" />
                            Professional Links
                        </h2>
                        <div class="space-y-3">
                            <a href="https://linkedin.com/in/kamrul-hassan-x64" 
                               target="_blank"
                               class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800 transition">
                                <Icon name="fa6-brands:linkedin" class="mr-3 text-blue-600 text-xl" />
                                <div>
                                    <div class="font-semibold">LinkedIn</div>
                                    <div class="text-sm text-gray-600 dark:text-gray-300">Professional Network</div>
                                </div>
                            </a>
                            
                            <a href="https://github.com/kamrulhassan" 
                               target="_blank"
                               class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800 transition">
                                <Icon name="fa6-brands:github" class="mr-3 text-gray-800 dark:text-gray-200 text-xl" />
                                <div>
                                    <div class="font-semibold">GitHub</div>
                                    <div class="text-sm text-gray-600 dark:text-gray-300">Code & Projects</div>
                                </div>
                            </a>
                            
                            <a href="https://kamroot.com" 
                               target="_blank"
                               class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800 transition">
                                <Icon name="fa6-solid:globe" class="mr-3 text-indigo-600 text-xl" />
                                <div>
                                    <div class="font-semibold">Personal Website</div>
                                    <div class="text-sm text-gray-600 dark:text-gray-300">kamroot.com</div>
                                </div>
                            </a>
                        </div>
                    </section>
                </div>

                <!-- Contact Form & Information -->
                <div class="space-y-6">
                    <!-- Contact Form -->
                    <section class="professional-card p-6">
                        <h2 class="text-xl font-bold mb-4 flex items-center">
                            <Icon name="fa6-solid:paper-plane" class="mr-3 text-purple-600" />
                            Send a Message
                        </h2>
                        <form class="space-y-4">
                            <div>
                                <label for="name" class="block text-sm font-medium mb-2">Name</label>
                                <input type="text" id="name" name="name" 
                                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                                       placeholder="Your name">
                            </div>
                            
                            <div>
                                <label for="email" class="block text-sm font-medium mb-2">Email</label>
                                <input type="email" id="email" name="email" 
                                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                                       placeholder="your.email@example.com">
                            </div>
                            
                            <div>
                                <label for="subject" class="block text-sm font-medium mb-2">Subject</label>
                                <select id="subject" name="subject" 
                                        class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                                    <option value="">Select a topic</option>
                                    <option value="research">Research Collaboration</option>
                                    <option value="consulting">Security Consulting</option>
                                    <option value="speaking">Speaking Engagement</option>
                                    <option value="general">General Inquiry</option>
                                </select>
                            </div>
                            
                            <div>
                                <label for="message" class="block text-sm font-medium mb-2">Message</label>
                                <textarea id="message" name="message" rows="4" 
                                          class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                                          placeholder="Tell me about your project or inquiry..."></textarea>
                            </div>
                            
                            <button type="submit" 
                                    class="btn-security w-full">
                                <Icon name="fa6-solid:paper-plane" class="mr-2" />
                                Send Message
                            </button>
                        </form>
                    </section>

                    <!-- Response Time -->
                    <section class="professional-card p-6 bg-gradient-to-r from-green-50 to-blue-50 dark:from-gray-800 dark:to-gray-700">
                        <h2 class="text-xl font-bold mb-4 flex items-center">
                            <Icon name="fa6-solid:clock" class="mr-3 text-green-600" />
                            Response Time
                        </h2>
                        <div class="space-y-3">
                            <div class="flex items-center">
                                <Icon name="fa6-solid:check-circle" class="mr-3 text-green-500" />
                                <span class="text-sm">Email responses within 24-48 hours</span>
                            </div>
                            <div class="flex items-center">
                                <Icon name="fa6-solid:check-circle" class="mr-3 text-green-500" />
                                <span class="text-sm">Urgent security matters: Same day</span>
                            </div>
                            <div class="flex items-center">
                                <Icon name="fa6-solid:check-circle" class="mr-3 text-green-500" />
                                <span class="text-sm">Research collaboration: 2-3 days</span>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <!-- Areas of Interest -->
            <section class="mt-8 professional-card p-6">
                <h2 class="text-xl font-bold mb-4 flex items-center">
                    <Icon name="fa6-solid:lightbulb" class="mr-3 text-yellow-600" />
                    Areas of Interest & Collaboration
                </h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <div class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-gray-700">
                        <Icon name="fa6-solid:shield-halved" class="mr-3 text-blue-600" />
                        <span class="text-sm font-medium">Penetration Testing</span>
                    </div>
                    <div class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-gray-700">
                        <Icon name="fa6-solid:search" class="mr-3 text-green-600" />
                        <span class="text-sm font-medium">Digital Forensics</span>
                    </div>
                    <div class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-gray-700">
                        <Icon name="fa6-solid:network-wired" class="mr-3 text-purple-600" />
                        <span class="text-sm font-medium">IoT Security</span>
                    </div>
                    <div class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-gray-700">
                        <Icon name="fa6-solid:eye" class="mr-3 text-orange-600" />
                        <span class="text-sm font-medium">OSINT Research</span>
                    </div>
                    <div class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-gray-700">
                        <Icon name="fa6-solid:bug" class="mr-3 text-red-600" />
                        <span class="text-sm font-medium">Bug Bounty Research</span>
                    </div>
                    <div class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-gray-700">
                        <Icon name="fa6-solid:graduation-cap" class="mr-3 text-indigo-600" />
                        <span class="text-sm font-medium">Security Education</span>
                    </div>
                </div>
            </section>

            <!-- Professional Availability -->
            <section class="mt-8 professional-card p-6 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-700">
                <h2 class="text-xl font-bold mb-4 flex items-center">
                    <Icon name="fa6-solid:calendar-check" class="mr-3 text-blue-600" />
                    Professional Availability
                </h2>
                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="font-semibold mb-2">Available For:</h3>
                        <ul class="space-y-1 text-sm">
                            <li class="flex items-center">
                                <Icon name="fa6-solid:check" class="mr-2 text-green-500" />
                                Security Research Collaboration
                            </li>
                            <li class="flex items-center">
                                <Icon name="fa6-solid:check" class="mr-2 text-green-500" />
                                Penetration Testing Projects
                            </li>
                            <li class="flex items-center">
                                <Icon name="fa6-solid:check" class="mr-2 text-green-500" />
                                Security Consulting
                            </li>
                            <li class="flex items-center">
                                <Icon name="fa6-solid:check" class="mr-2 text-green-500" />
                                Speaking Engagements
                            </li>
                        </ul>
                    </div>
                    <div>
                        <h3 class="font-semibold mb-2">Current Status:</h3>
                        <div class="flex items-center mb-2">
                            <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
                            <span class="text-sm">Available for new projects</span>
                        </div>
                        <p class="text-sm text-gray-600 dark:text-gray-300">
                            Currently working as Cybersecurity Researcher at TheTeamPhoenix, 
                            but available for collaboration and consulting projects.
                        </p>
                    </div>
                </div>
            </section>
        </div>
    </div>
</MainGridLayout>
